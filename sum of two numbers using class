#include<iostream>

using namespace std;

class sum{
    public :
       
        void add(int a, int b){
            cout << a + b;
        }
        
    };

int main(){

    int a;
    int b;
    sum addition;
    
    cout << "Enter two numbers you want to add";
    cin >> a >> b;
    addition.add(a, b);
    return 0;
}
